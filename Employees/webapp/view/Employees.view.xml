<mvc:View
        controllerName="hr.Employees.controller.Employees"
        xmlns:mvc="sap.ui.core.mvc"
        displayBlock="true"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:f="sap.f">

        <!-- Vista para ver los empleados -->

        <Page title="{i18n>employeesTitle}">
            <content>
                <f:FlexibleColumnLayout id="fcl" backgroundDesign="Solid" layout="TwoColumnsMidExpanded">
                    <f:beginColumnPages>
                        <Page id="leftPanel" showHeader="false" showFooter="false">
                            <content>
                                <core:Fragment fragmentName="hr.Employees.fragment.EmployeesLeftList" type="XML" />
                            </content>
                        </Page>
                    </f:beginColumnPages>
                    <f:midColumnPages>
                        <mvc:XMLView id="employeeDetailsView" viewName="hr.Employees.view.EmployeeDetails"></mvc:XMLView>
                    </f:midColumnPages>
                    <f:endColumnPages>
                        <Page >
                        </Page>
                    </f:endColumnPages>
                </f:FlexibleColumnLayout>
            </content>
            <footer>
                
            </footer>
        </Page>
</mvc:View>